{
  "name": "smart-study-flashcard-generator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.jsx",
  "description": "AI-Powered Flashcard Generator with modern UI and offline support",
  "keywords": ["flashcards", "study", "learning", "ai", "education", "pwa", "react"],
  "author": "Vivek Chaurasia",
  "license": "MIT",
  "homepage": "https://github.com/Vivekch05/flashcard-generator",
